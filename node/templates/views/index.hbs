        <title>{{title}}</title>
        <link rel="stylesheet" href="css/styles.css"/>
    </head>
    <body>
        <div class="main-content">
            {{>header}}
            <article class="widget">
                <form class="weatherLocation">
                    <input type="text" placeholder="location..."/>
